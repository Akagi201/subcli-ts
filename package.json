{
  "name": "subcli",
  "version": "0.1.0",
  "description": "A Substrate CLI util based on @polkadot/api",
  "license": "Apache-2.0",
  "author": "Akagi201 <akagi201@gmail.com>",
  "type": "module",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "clean": "rimraf coverage build tmp",
    "dev": "node --experimental-specifier-resolution=node --loader ts-node/esm src/index.ts",
    "lint": "eslint . --ext .ts",
    "sort-package": "sort-package-json",
    "start": "node --experimental-specifier-resolution=node build/src/index.js",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@polkadot/api": "^8.4.2",
    "@polkadot/keyring": "^9.2.1",
    "@polkadot/util": "^9.2.1",
    "@polkadot/util-crypto": "^9.2.1",
    "bn.js": "^5.2.0",
    "dayjs": "^1.11.2",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.24.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.2.2",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "sort-package-json": "^1.57.0",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "tsutils": "^3.21.0",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">= 16.14 <17"
  },
  "volta": {
    "node": "16.14.2"
  }
}
